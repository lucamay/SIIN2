<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="16dp">

    <TextView
        android:id="@+id/idTramo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTramo"
        android:text="@string/infoWindowTextView"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/distancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTramo"
        android:text="Distancia:" />

    <TextView
        android:id="@+id/poblacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/distancia"
        android:text="PoblaciÃ³n:" />

    <TextView
        android:id="@+id/tramo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/poblacion"
        android:text="Tramo:" />

    <TextView
        android:id="@+id/proyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tramo"
        android:text="Proy id:" />

    <TextView
        android:id="@+id/idSubproyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/proyId"
        android:text="Id Subproyecto:" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idSubproyecto"
        android:layout_alignParentLeft="true"
        android:text="@string/ficha"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idSubproyecto"
        android:layout_alignParentRight="true"
        android:text="@string/seguimiento"/>

</RelativeLayout>